{
  "manifest_version": 3,
  "name": "Draggable Video Resizer",
  "version": "1.0",
  "description": "Resize and drag videos on any page.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "expand.png",
      "48": "expand.png",
      "128": "expand.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
